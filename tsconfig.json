{
    "version": "2.4.2",
    "compilerOptions": {
        "target" : "es6",
        "lib": ["es2017", "dom"],
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "noUnusedLocals": true,
        "outDir": "./dist"
    },
    "typeRoots": [
        "./node_modules/@types",
    ],
    "types": [
        "jest"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/__tests__",
        "*.test.ts"
    ]
}